<Page x:Class="Profisys_Zadanie.ListOfDocuments.DocumentsTablePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Profisys_Zadanie.ListOfDocuments"
      xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
      mc:Ignorable="d" 
      d:DesignHeight="575" d:DesignWidth="1020"
      Title="DocumentsTablePage">

    <Border Background="#1E3A5F" Margin="20" BorderBrush="#559DD9" BorderThickness="1" CornerRadius="20">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>

            <DataGrid Grid.Row="0" Style="{StaticResource DocumentsTable}">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Id"/>
                    <DataGridTextColumn Header="Type"/>
                    <DataGridTextColumn Header="Date"/>
                    <DataGridTextColumn Header="FirstName"/>
                    <DataGridTextColumn Header="LastName"/>
                    <DataGridTextColumn Header="City"/>
                </DataGrid.Columns>
            </DataGrid>
            
        </Grid>
    </Border>
</Page>
